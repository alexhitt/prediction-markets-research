# Prediction Markets AI System - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# POLYMARKET CONFIGURATION
# =============================================================================

# Your Polygon wallet private key (for signing transactions)
# WARNING: Keep this secret! Never commit to git!
POLYMARKET_PRIVATE_KEY=

# Polymarket API endpoints (defaults shown, usually don't need to change)
POLYMARKET_CLOB_URL=https://clob.polymarket.com
POLYMARKET_GAMMA_URL=https://gamma-api.polymarket.com
POLYMARKET_DATA_URL=https://data-api.polymarket.com

# =============================================================================
# KALSHI CONFIGURATION
# =============================================================================

# Your Kalshi API key (from dashboard)
KALSHI_API_KEY=

# Your RSA private key for signing (PEM format, or path to file)
# Can be inline (replace newlines with \n) or path: /path/to/key.pem
KALSHI_PRIVATE_KEY=

# Use demo environment for testing (set to "true" for sandbox)
KALSHI_USE_DEMO=false

# Kalshi API endpoints
KALSHI_API_URL=https://api.kalshi.com/trade-api/v2
KALSHI_DEMO_URL=https://demo-api.kalshi.com/trade-api/v2

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database path (default)
DATABASE_URL=sqlite:///./data/prediction_markets.db

# For PostgreSQL (optional, for production):
# DATABASE_URL=postgresql://user:password@localhost:5432/prediction_markets

# =============================================================================
# AI / LLM CONFIGURATION (for future signal analysis)
# =============================================================================

OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# =============================================================================
# ALERTING CONFIGURATION (optional)
# =============================================================================

# Slack webhook for alerts
SLACK_WEBHOOK_URL=

# Discord webhook for alerts
DISCORD_WEBHOOK_URL=

# Email alerts (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL_TO=

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Data collection interval (seconds)
COLLECTION_INTERVAL=60

# Dashboard port
DASHBOARD_PORT=8501

# Enable paper trading mode (no real trades)
PAPER_TRADING=true
